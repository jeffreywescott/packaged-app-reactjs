{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "valid-jsdoc": 2,

    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/prop-types": [2, { "ignore": ["dispatch"] }],
    "react/react-in-jsx-scope": 2,

    "semi": [2, "never"],
    "no-use-before-define": 0,
    "new-cap": [2, {"capIsNewExceptions": ["HTTPS"]}],
    
    // Disable until Flow supports let and const
    "no-var": 0,
    "vars-on-top": 0,

    // Disable comma-dangle unless need to support it
    "comma-dangle": 0
  },
  "plugins": [
    "react"
  ]
}
